<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.simonvt.menudrawer.demo" 
    android:versionCode="6"
    android:versionName="3.0.2" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="23" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SampleTheme" >
        <activity
            android:name="SamplesActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="net.simonvt.menudrawer.demo.WindowSample" />
        <activity android:name="net.simonvt.menudrawer.demo.LeftDrawerSample" />
        <activity android:name="net.simonvt.menudrawer.demo.ListActivitySample" />
        <activity android:name="net.simonvt.menudrawer.demo.ViewPagerSample" />
        <activity
            android:name="net.simonvt.menudrawer.demo.RightDrawerSample"
            android:theme="@style/SampleTheme.RightDrawer" />
        <activity
            android:name="net.simonvt.menudrawer.demo.TopDrawerSample"
            android:theme="@style/SampleTheme.TopDrawer" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.simonvt.menudrawer.samples.SamplesActivity" />
        </activity>
        <activity
            android:name="net.simonvt.menudrawer.demo.BottomDrawerSample"
            android:theme="@style/SampleTheme.BottomDrawer" />
        <activity
            android:name="net.simonvt.menudrawer.demo.LayoutSample"
            android:theme="@style/SampleTheme.TopDrawer" />
        <activity android:name="net.simonvt.menudrawer.demo.StaticDrawerSample" />
        <activity android:name="net.simonvt.menudrawer.demo.FragmentSample" />
        <activity
            android:name="net.simonvt.menudrawer.demo.ActionBarSherlockSample"
            android:theme="@style/SampleTheme.Sherlock" />
        <activity android:name="net.simonvt.menudrawer.demo.LeftOverlaySample" />
    
        <activity
            android:name="net.simonvt.menudrawer.demo.TopOverlaySample"
            android:theme="@style/SampleTheme.TopDrawer" />
        <activity android:name="net.simonvt.menudrawer.demo.RightOverlaySample" />
        <activity
            android:name="net.simonvt.menudrawer.demo.BottomOverlaySample"
            android:theme="@style/SampleTheme.BottomDrawer" />
     
    </application>

</manifest>